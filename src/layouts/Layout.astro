---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Axell Dev FrontEnd Developer" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="relative min-h-screen bg-neutral-950 overflow-hidden antialiased"
  >
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: 'JetBrainsMono';
    src: url('/fonts/JetBrains_Mono.woff2') format('woff2');
  }
</style>
